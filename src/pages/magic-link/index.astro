---
import { MagicLinkForm } from "../../features/auth/components/magic-link-form";
import { AUTH_COOKIES } from "../../features/auth/constants";
import MainLayout from "../../layout/main-layout.astro";

const magicLinkVerificationId = Astro.cookies.get(
  AUTH_COOKIES.MAGIC_LINK_VERIFICATION_ID
)?.value;
---

<MainLayout title="Magic Link" description="Log in via magic link">
  <MagicLinkForm verificationId={magicLinkVerificationId} client:load />
</MainLayout>
