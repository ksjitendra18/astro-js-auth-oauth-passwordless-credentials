---
import { EmailVerificationForm } from "../../features/auth/components/email-verification-form";
import MainLayout from "../../layout/main-layout.astro";

const isUserLoggedIn = !!Astro.locals.userId;
if (isUserLoggedIn) {
  return Astro.redirect("/dashboard");
}
---

<MainLayout title="Verify Email" description="Verify Email">
  <EmailVerificationForm client:load id={Astro.params.verificationId!} />
</MainLayout>
